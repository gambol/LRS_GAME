        script.
            (function __showMenu() {
                $('#menu-list-id>li>a').click(function () {
                    $('#menu-list-id').children('li').removeClass('active');
                    $(this).parent().addClass('active');
                });
                try {
                    var menus = '#{menus}'.split(',');
                    _.each(menus, function (menu) {
                        $('#menu-list-id').children().filter(':contains("' + menu + '")').show();
                    });
                } catch (e) {
                }
            })();
